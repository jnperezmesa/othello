# editorconfig.org

# top-most EditorConfig file
root = true

[*]
# Set default charset for all files
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

[*.{js,vue,ts}]
# 2 space indentation
indent_style = space
indent_size = 2

[*.{css,sass,json,html}]
# 4 space indentation
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false


# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
